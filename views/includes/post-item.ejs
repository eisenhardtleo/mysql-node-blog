<article class="post-item">
  <h2><%= post.title %></h2>
  <p class="post-item-author">By <%= post.author_name %></p>
  <p><%= post.summary %></p>
  <div class="post-actions">
    <form action="/posts/<%= post.id %>/delete" method="POST">
      <button type="submit" class="btn btn-alt">Elimina post</button>
    </form>
    <a href="/posts/<%= post.id %>/edit">Modifica post</a>
    <a class="btn" href="/posts/<%= post.id %>">Visualizza post</a>
  </div>
</article>